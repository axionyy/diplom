<resources>
    <!-- Светлая тема -->
    <style name="MyTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Фон и поверхность -->
        <item name="android:windowBackground">@color/light_green</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>

        <!-- Текст -->
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Статус бар -->
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
    </style>

    <!-- Темная тема -->
    <style name="MyTheme.Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета (акценты остаются теми же) -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Фон и поверхность -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_text</item>

        <!-- Текст -->
        <item name="android:textColor">@color/dark_text</item>
        <item name="android:textColorPrimary">@color/dark_text</item>
        <item name="android:textColorSecondary">@color/gray</item>

        <!-- Статус бар -->
        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:navigationBarColor">?attr/colorSurface</item>
    </style>


    <style name="CustomDatePickerDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorAccent">@color/blue</item>
        <item name="colorPrimary">?android:attr/textColorPrimary</item>
        <item name="colorPrimaryDark">?android:attr/textColorPrimary</item>
        <item name="android:textColorPrimary">?android:attr/textColorPrimary</item>
    </style>
</resources>